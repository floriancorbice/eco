<!DOCTYPE html>
<html>
  <head>
    <title>EshopV2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application' %>

  </head>

  <body>
    <%= render "layouts/header" %>
    <div class="wrap" style="padding-top: 50px;">
      <div class="banner">
        <h1 class="display-1 p-3 bg-secondary text-white rounded">Cat lover</h1>
      </div>
      <div class="container">

          <div class="row text-center">
            <div class="col shop-cart">
              <% if user_signed_in? && @cart && @cart.line_items.any? %>
                <%= render @cart %>
              <% else %>
                <h2>Panier vide</h2>
              <% end %>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <p id="notice"><%= notice %></p>
              <p id="alert"><%= alert %></p>
              <%= yield %>
            </div>
          </div>

      </div>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
